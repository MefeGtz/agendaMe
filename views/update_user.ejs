<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->
    <!-- ========== partes ========== -->
    <div class="row bg-gray p-4">
        <div class="col-md-4 mx-auto">
            <div class="card" style="background-color: #c0d1fb;">
                <%- include('include/errors') %>
                    <div class="card-header border-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <center>
                                    <h4 class="mb-0">Modificar Usuario <i class='fas fa-user-plus'></i></h4>
                                </center>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form action="/update-user/<%= user._id%>?_method=PUT" method="POST">
                            <input type="hidden" name="_method" value="PUT">
                            <div class="mb-3">
                                <label for="name">Nombre:</label>
                                <input type="text" class="form-control" name="name" placeholder="Nombre" required
                                    value="<%=user.name%>" />
                            </div>
                            <div class="mb-3">
                                <label for="email">Email:</label>
                                <input type="email" class="form-control " name="email" required placeholder="Email"
                                    value="<%=user.email%>" />
                            </div>

                            <div class="mb-3">
                                <label for="rol">Rol</label>
                                <select name="rol" id="" class="form-control">
                                    <option value="1" <%=user.rol==1 ? 'selected' :'' %>> Usuario</option>
                                    <option value="0" <%=user.rol==0 ? 'selected' :'' %>> Administrador</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="password">Contraseña:</label>
                                <input type="password" class="form-control " name="password" placeholder="Contraseña"
                                    value="" />

                                <small class="text-danger">Solo llene el campo si desea cambiar la Contraseña</small>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary" type="submit">Guardar</button>
                                <button class="btn btn-danger" type="reset">Cancelar</button>
                            </div>
                        </form>
                    </div>
            </div>
        </div>
    </div>


    <!-- ========== pasrtes ========== -->



    <!-- include header -->
    <%- include('include/_footer') %>
        <!-- /include header -->