<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->


    <!-- ========== partes ========== -->
    <div class="row bg-gray p-4">

        <div class="col-md-4 mx-auto">
            <div class="card " style="background-color: #c0d1fb;">
                <%- include('include/errors') %>
                    <div class="card-header border-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <center>
                                    <h4 class="mb-0">Registrar Cuenta</h4>
                                </center>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form action="/signup" method="POST">
                            <div class="mb-3">
                                <label for="name">Nombre:</label>
                                <input type="text" class="form-control" name="name" placeholder="Nombre" required
                                    value="<%=name%>" />
                            </div>
                            <div class="mb-3">
                                <label for="email">Email:</label>
                                <input type="email" class="form-control " name="email" required placeholder="Email"
                                    value="<%=email%>" />
                            </div>
                            <div class="mb-3">
                                <label for="password">Contraseña:</label>
                                <input type="password" class="form-control " name="password" required
                                    placeholder="Contraseña" value="<%=password%>" />
                            </div>
                            <div class="mb-3">
                                <label for="confirm_password">Confirme su Contraseña:</label><br>
                                <input type="password" class="form-control" name="confirmpassword"
                                    placeholder="Confirme su Contraseña:" required value="<%=confirmpassword%>" />
                            </div>
                            <button class="btn btn-success btn-block">
                                Registrar
                            </button>
                        </form>
                    </div>
                    <p class="text-center">ya tiene una cuenta?
                        <a href="/signin" class="text-info">Iniciar Sesión</a>
                    </p>
            </div>
        </div>
    </div>


    <!-- ========== pasrtes ========== -->



    <!-- include header -->
    <%- include('include/_footer') %>
        <!-- /include header -->