<!-- form handling -->
<!-- para las validaciones -->
<% if(errors){errors.forEach(function(error){ %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%=error.text%>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
    </div>
    <%});}%>
        <form action="/add-task" method="POST" id="add_task">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Nombre</label>
                    <input type="hidden" name="id" value="">
                    <input type="text" name="name_task" required value="<%=name_task %>" placeholder="Actividad">
                </div>

                <div class="form-group">
                    <label for="Fecha_cita" class="text-light">Fecha de Cita</label>

                    <% var hoy=new Date ();%>
                        <%hoy%>

                            <input type="date" name="date" required class="form-control" value="<%=date%>"
                                placeholder="">
                </div>

                <div class="form-group">
                    <label for="Hora_inicial" class="text-light">Hora Inicial</label>
                    <select name="start_h" required class="form-control" id="horai" placeholder="12:00 AM">
                        <option value="0">12:00 AM</option>
                        <% for(let i=1; i <=23; i++){ if(i < 12){%>
                            <option value="<%= i%>" <%=start_h==i ? 'selected' :'' %> >
                                <%=i%>:00 AM
                            </option>
                            <%}else if (i==12){%>
                                <option value="<%= i%>" <%=start_h==i ? 'selected' :'' %> >
                                    <%=i%>:00 PM
                                </option>
                                <%}else if (i>12 ) {%>
                                    <option value="<%= i%>" <%=start_h==i ? 'selected' :'' %> >
                                        <%=i-12%>:00 PM
                                    </option>
                                    <%}}%>
                    </select>
                </div>

                <div class="form-group">
                    <label for="Hora_final" class="text-light">Hora final</label>
                    <select name="end_h" required class="form-control" id="horaf" placeholder="9:00 AM">
                        <option value="0">12:00 AM</option>
                        <% for(let i=1; i <=23; i++){ if(i < 12){%>
                            <option value="<%= i%>" <%=end_h==i ? 'selected' :'' %> >
                                <%=i%>:00 AM
                            </option>
                            <%}else if (i==12){%>
                                <option value="<%= i%>" <%=end_h==i ? 'selected' :'' %> >
                                    <%=i%>:00 PM
                                </option>
                                <%}else if (i>12 ) {%>
                                    <option value="<%= i%>" <%=end_h==i ? 'selected' :'' %> >
                                        <%=i-12%>:00 PM
                                    </option>
                                    <%}}%>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Descripcion" class="text-light">Descripción</label>
                    <input type="text" name="description" value="<%description%>" placeholder=" Descripción">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Guardar</button>
                </div>
            </div>
        </form>